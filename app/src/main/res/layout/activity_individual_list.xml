<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tinkazorge.problemset4.IndividualListActivity">

    <ListView
        android:layout_below="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_shapes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intructions_item"
        android:id="@+id/instructions"
        android:layout_below="@+id/todo_items"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/item_list"
    android:textColor="#FF00BF"
    android:id="@+id/add_button"
    android:layout_alignBottom="@+id/list_view_shapes"
    android:layout_alignRight="@+id/list_view_shapes"
    android:layout_alignEnd="@+id/list_view_shapes"
    android:layout_alignTop="@+id/item_edit"
    android:layout_toRightOf="@+id/item_edit"
    android:layout_toEndOf="@+id/item_edit"
    android:layout_alignParentBottom="true"/>

    <EditText
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:id="@+id/item_edit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_items"
        android:id="@+id/todo_items"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"/>

</RelativeLayout>


